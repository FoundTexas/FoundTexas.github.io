{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section id="register" class="container-fluid d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh; width: 100%; overflow: hidden;">
		<img class="mx-auto position-fixed" style="z-index: -1000000; filter: blur(7px) brightness(70%); height: 103%; width: 101%;" src="{{ asset('animatedGrid.gif') }}" alt="Other Image"/>
		<div class="container">
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}

			<div class="row justify-content-center">
				<div class="col-md-6">
					<div class="card">
						<div class="card-header bg-main-dark">
							<h2 class="text-center m-2">Register</h2>
						</div>
						<div class="container card-body bg-dark">
							<a href="{{ path('app_login') }}"> Log in</a>
							{{ form_start(registrationForm) }}
							<div class="form-group m-2">
								{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
							</div>
							<div class="form-group m-2">
								{{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
							</div>
							<div class="form-group m-1">
								{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
							</div>
							<div class="row justify-content-center mx-auto my-2">
								<div class="form-check col-auto">
									{{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
								</div>
								<a href="#" class="col-auto" data-bs-toggle="modal" data-bs-target="#exampleModal">Terms of Service</a>
							</div>
							<div class="row">
								<button type="submit" class="btn btn-primary col-auto text-center mx-auto">Register</button>
							</div>
							{{ form_end(registrationForm) }}

							<button class="btn btn-lg btn-success" onclick="window.location.href='{{ path('connect_google') }}'">google sign in</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-xl">
			<div class="modal-content bg-dark">
				<div class="modal-header bg-main-dark">
					<h2 class="modal-title fs-5" id="exampleModalLabel">Terms of Service</h2>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					{% include 'terms_of_service.html.twig' %}
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
