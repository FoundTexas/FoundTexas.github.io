<script>
	window.onload = function () {
var elements = document.getElementsByClassName('typing-effect');
for (var i = 0; i < elements.length; i++) {
typeWriter(elements[i].textContent, elements[i]);
}
};

// Function to create the typing effect
function typeWriter(text, targetElement) {
var speed = 15; // Adjust typing speed here (lower value for faster typing)
var i = 0;
targetElement.textContent = ""; // Clear existing text
function type() {
if (i < text.length) {
targetElement.textContent += text.charAt(i);
i++;
setTimeout(type, speed * (text.charAt(i) == ' ' ? 5 : 1));
}
}
type();
}
</script>
