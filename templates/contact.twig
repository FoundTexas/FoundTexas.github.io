{# templates/contact.html.twig #}

<section id="contact" class="accent-bg-dark px-3" style="min-height: 100vh;">

	{% include 'index/IndexHeader.twig' with {'upRef': 'projects', 'textRef': 'contact', 'headText': 'Contact 🐼', 'darkbg': true} %}

	<form action="{{ path('app_email') }}" method="post">
		<label for="name">Name:</label><br>
		<input type="text" id="name" name="name" required><br><br>
		<label for="email">Email:</label><br>
		<input type="email" id="email" name="email" required><br><br>
		<label for="message">Message:</label><br>
		<textarea id="message" name="message" rows="4" required></textarea><br><br>
		<button type="submit">Submit</button>
	</form>
</section>
